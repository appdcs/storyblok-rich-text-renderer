{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@marvr/*": ["packages/*/src"]
    }
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
